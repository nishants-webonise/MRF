  <script type="text/javascript">

    $(document).ready(function () {
      $(".inline").colorbox({inline:true, width:"52%"});

//      $(".alert").alert()
//
//      $("#success_alert").hide();
//      $("#error_alert").hide();

      jQuery.validator.addMethod("accept", function(value, element, param) {
        return value.match(new RegExp("." + param + "$"));
      });

      //validation
      $("#registration_form").validate({
        rules: {
          "fname": {
            required: true,
            minlength: 2,
            accept: "[a-zA-Z]+"
          },
          "lname": {
            required: true,
            minlength: 2,
            accept: "[a-zA-Z]+"
          },
          "age":{
            required:true,
            digits: true,
            min: 0,
            max: 100
          },
          "pname": {
            required: true,
            minlength: 2,
            accept: "[a-zA-Z]+"
          },
          "email":{
            required: true,
            email: true
          },
          "phone": {
            required:true,
            accept: "[0-9]+",
            minlength: 8,
            maxlength: 15
          }
        },
        messages:{
          "fname":{
            accept:"This field accepts only alphabets."
          },
          "lname":{
            accept:"This field accepts only alphabets."
          },
          "pname":{
            accept:"This field accepts only alphabets."
          },
          "phone":{
            accept:"This field accepts only digits."
          }
        }
      });
    });

  </script>
